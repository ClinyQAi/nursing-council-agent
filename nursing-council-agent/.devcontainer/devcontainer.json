{
    "name": "Nursing Council Agent",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "18"
        }
    },
    "postCreateCommand": "pip install uv && uv sync && cd frontend && npm install",
    "forwardPorts": [
        8000,
        5173
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ],
            "settings": {
                "python.defaultInterpreterPath": ".venv/bin/python"
            }
        }
    },
    "secrets": {
        "OPENROUTER_API_KEY": {
            "description": "API key for OpenRouter (get it from https://openrouter.ai/keys)"
        }
    }
}